{
  "compilerOptions": {
    "outDir": "./out/",
    "declarationDir": "./out/",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
}
